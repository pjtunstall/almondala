{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./public/js",
    "rootDir": "./src/ts",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": false, // Set to true to enable source maps for debugging.
    "lib": ["DOM", "ESNext"]
  },
  "include": ["src/**/*", "public/wasm/**/*"],
  "exclude": ["node_modules", "target", "src/rust"]
}
